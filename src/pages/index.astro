---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Griffin Allen">
	<main>
		<div class="w-100 flex justify-center">
			<div class="rounded-full w-1/3 clip-circle">
				<img src="IMG_0388-min.jpg" alt="Me"/>
			</div>
		</div>
		<h1>Griffin Allen</h1>
		<div class="text-center text-3xl pb-1">
			Software Developer
		</div>
		<div class="flex w-100 justify-center">
			<div class="w-1/2 border-t my-3"/>
		</div>
		<div class="flex w-100 justify-center">
			<div class="flex w-1/3 justify-center">
				<div class="w-1/3 px-1">
					<img src="linkedin.svg" alt="Linkedin" class="filter-light link" onclick="window.open('https\:\/\/linkedin.com/in/griffin-allen-090655171')"/>
				</div>
				<div class="w-1/3 px-1">
					<img src="github.svg" alt="Github" class="filter-light link" onclick="window.open('https\:\/\/github.com/griffinallen')"/>
				</div>
				<div class="w-1/3 px-1">	
					<img src="email-outline.svg" alt="Email" class="filter-light link" onclick="window.open('mailto:griffinallendev@gmail.com')"/>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 500;
		line-height: 1;
		text-align: center;
		margin-bottom: 0.25em;
	}
	.filter-light {
		filter: invert(100%) sepia(84%) saturate(543%) hue-rotate(190deg) brightness(115%) contrast(76%);	
	}
	.clip-circle {
		clip-path: circle();
	}
	.link:hover {
		cursor: pointer;
		filter: invert(24%) sepia(65%) saturate(4537%) hue-rotate(199deg) brightness(89%) contrast(92%);
	}
</style>
